<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:linear_programming_solver.ViewModels"
             x:Class="linear_programming_solver.Views.UserControls.ProblemEditorView"
             x:DataType="vm:ProblemEditorViewModel">
    
    <DockPanel Margin="20">
        <!-- Toolbar -->
        <Border DockPanel.Dock="Top" 
                BorderBrush="Gray" 
                BorderThickness="0,0,0,1" 
                Padding="0,0,0,10" 
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <!-- Algorithm Selection -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Algorithm:" 
                              VerticalAlignment="Center" 
                              FontWeight="SemiBold" />
                    <ComboBox ItemsSource="{Binding AvailableAlgorithms}"
                             SelectedItem="{Binding SelectedAlgorithm}"
                             DisplayMemberBinding="{Binding DisplayName}"
                             MinWidth="200"
                             Padding="8" />
                </StackPanel>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10">
                    <Button Content="Save Problem" 
                           Command="{Binding SaveProblemCommand}" 
                           Padding="15,8"
                           Background="DodgerBlue"
                           Foreground="White" />
                    <Button Padding="15,8"
                           Command="{Binding SolveProblemCommand}"
                           IsEnabled="{Binding CanSolve}"
                           Background="Green"
                           Foreground="White">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Solve Problem" IsVisible="{Binding !IsSolving}" />
                            <TextBlock Text="Solving..." IsVisible="{Binding IsSolving}" />
                            <TextBlock Text="â—" FontSize="8" IsVisible="{Binding IsSolving}" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content -->
        <ScrollViewer>
            <StackPanel Spacing="15">
                <TextBlock Text="{Binding CurrentModel.FileName, StringFormat='Problem: {0}'}" 
                          FontWeight="Bold" 
                          FontSize="18" />
                
                <Border BorderBrush="LightGray" 
                        BorderThickness="1" 
                        Padding="15">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Problem Definition" 
                                  FontWeight="Bold" 
                                  FontSize="14" />
                        
                        
                        <TextBox Text="{Binding CurrentModel.FileContent}" 
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                                MinHeight="450"
                                FontFamily="Consolas,Monaco,monospace"
                                FontSize="12" />
                        
                        <TextBlock Text="Format: Line 1: Objective function, Lines 2-n: Constraints, Last line: Variable types"
                                  FontSize="11"
                                  Foreground="Gray"
                                  FontStyle="Italic" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>